#!/bin/bash
set -e

psql -v ON_ERROR_STOP=1 --username "$POSTGRES_USER" --dbname "$POSTGRES_DB" <<-EOSQL

    CREATE USER baseadmin WITH PASSWORD baseadminpass;
    CREATE DATABASE basedb;

    GRANT ALL PRIVILEGES ON DATABASE basedb TO baseadmin;

    ALTER USER baseadmin CREATEDB;
    ALTER DATABASE basedb OWNER TO baseadmin;

EOSQL